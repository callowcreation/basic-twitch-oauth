{
	"compilerOptions": {
		"module": "commonjs",
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"outDir": "bin",
		"sourceMap": true,
		"strict": true,
		"target": "es2017",
		"resolveJsonModule": true
	},
	"compileOnSave": true,
	"include": [
		"src/**/*.ts"
	],
	"exclude": [
		"node_modules"
	]
}